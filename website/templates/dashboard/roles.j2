{% extends "base.j2" %}


{% block title %}Rota Roamer - Manage Roles{% endblock title %}


{% block head %}
<link rel="stylesheet" type="text/css" href="{{ static('css/dashboard/roles.css') }}">
{% endblock head %}


{% block body %}
<div class="container">
    <div class="columns">
        <div class="column is-full">
            <h1 class="title">Manage your roles</h1>
            <h2 class="subtitle">Set what positions your staff can work as</h2>
            <br />

            <form id="create-new-role" action="javascript:void(0)" onsubmit="createNewRole();">
                <div class="field">
                    <label class="label required">Role name</label>
                    <div class="control">
                        <input class="input" type="text" name="role-name" required />
                    </div>
                </div> <!-- field -->
                <div class="field">
                    <label class="label">Role parent</label>
                    <div class="control">
                        <div class="select">
                            <select name="role-parent">
                                <option value="" default>(None)</option>
                            </select>
                        </div>
                    </div>
                </div> <!-- field -->
                <div class="field">
                    <div class="control">
                        <button class="button" type="submit">
                            Create new role
                        </button>
                    </div>
                </div> <!-- field -->
            </form>

            <div id="role-list">
                Loading...
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="{{ static('js/dashboard/roles.js') }}"></script>
<script type="text/javascript">getAllRoles();</script>
{% endblock body %}
