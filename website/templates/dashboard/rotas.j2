{% extends "base.j2" %}


{% block title %}Rota Roamer - Manage Rotas{% endblock title %}


{% block head %}
<link rel="stylesheet" type="text/css" href="{{ static('css/dashboard/rotas.css') }}">
{% endblock head %}


{% block body %}
<div class="container">
    <div class="columns">
        <div class="column is-full">
            <h1 class="title">Manage your rotas</h1>
            {# <h2 class="subtitle">Set what positions your staff can work as</h2> #}
            <br />

            <form id="create-new-rota" action="javascript:void(0)">
                <div class="field">
                    <label class="label">Availability</label>
                    <div class="control">
                        <div class="select">
                            <select name="availability"></select>
                        </div>
                    </div>
                </div> <!-- field -->
                <div class="field">
                    <div class="control">
                        <button
                                class="button"
                                type="submit"
                                role="create"
                                formaction="javascript:createNewRota();">
                            Create new rota
                        </button>
                    </div>
                </div> <!-- field -->
            </form>

            <div id="rota-list">
                Loading...
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="{{ static('js/dates.js') }}"></script>
<script type="text/javascript" src="{{ static('js/dashboard/rotas.js') }}"></script>
<script type="text/javascript">getAllAvailability(); getAllRotas();</script>
{% endblock body %}
